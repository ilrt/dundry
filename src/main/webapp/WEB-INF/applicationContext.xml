<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!--bean id="propertyConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
          p:location="/WEB-INF/jdbc.properties" />

    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource"
          p:driverClassName="${jdbc.driverClassName}"
          p:url="${jdbc.url}"
          p:username="${jdbc.username}"
          p:password="${jdbc.password}" /-->

    <!-- ADD PERSISTENCE SUPPORT HERE (jpa, hibernate, etc) -->
    
    <!-- Load values which typically vary per profile (dev, prod etc) -->
    <bean id="placeholderConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:app.properties" />
    </bean>
    
    <context:component-scan base-package="uk.ac.bristol.dundry" />
    
    <bean class="uk.ac.bristol.dundry.dao.FileSystemSource">
        <constructor-arg value="${sources.dir}"/>
    </bean>
    
    <bean class="uk.ac.bristol.dundry.dao.Repository">
        <constructor-arg>
            <bean class="uk.ac.bristol.dundry.dao.FileRepository">
                <constructor-arg value="${repo.dir}"/>
            </bean>
        </constructor-arg>
        <constructor-arg>
            <bean class="uk.ac.bristol.dundry.dao.MetadataStoreTDB">
                <constructor-arg value="${repo.metadata}"/>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean class="uk.ac.bristol.dundry.dao.TaskManager">
        <constructor-arg>
              <list>
                  <value>org.quartz.jobs.NoOpJob</value>
              </list>
        </constructor-arg>
    </bean>
    
    <bean class="uk.ac.bristol.dundry.webresources.providers.RdfResourceMappingProvider"
        scope="singleton">
        <constructor-arg>
            <map>
                <entry><key><value>source</value></key><value>http://purl.org/dc/terms/source</value></entry>
                <entry><key><value>title</value></key><value>http://purl.org/dc/terms/title</value></entry>
                <entry><key><value>description</value></key><value>http://purl.org/dc/terms/description</value></entry>
                <entry><key><value>contributors</value></key><value>http://purl.org/dc/terms/contributor</value></entry>
                <entry><key><value>creators</value></key><value>http://purl.org/dc/terms/creator</value></entry>
                <entry><key><value>publisher</value></key><value>http://purl.org/dc/terms/publisher</value></entry>
                <entry><key><value>subjects</value></key><value>http://purl.org/dc/terms/subject</value></entry>
                <entry><key><value>valid</value></key><value>http://purl.org/dc/terms/dateValid</value></entry>
                <entry><key><value>accepted</value></key><value>http://purl.org/dc/terms/dateAccepted</value></entry>
                <entry><key><value>language</value></key><value>http://purl.org/dc/terms/language</value></entry>
                <entry><key><value>atype</value></key><value>http://purl.org/dc/terms/type</value></entry>
                <entry><key><value>references</value></key><value>http://purl.org/dc/terms/references</value></entry>
                <entry><key><value>aformat</value></key><value>http://purl.org/dc/terms/format</value></entry>
                <entry><key><value>license</value></key><value>http://purl.org/dc/terms/license</value></entry>
                <entry><key><value>project</value></key><value>http://vocab.bris.ac.uk/data#project</value></entry>
                <entry><key><value>submitted</value></key><value>http://purl.org/dc/terms/dateSubmitted</value></entry>
            </map>
        </constructor-arg>
        <constructor-arg>
            <list>
                <value>contributors</value>
                <value>creators</value>
                <value>subjects</value>
                <value>references</value>
            </list>
        </constructor-arg>
    </bean>
    
</beans>
